<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Weather.ButtonAppearance.PrimaryTextButton" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/black</item>
        <item name="cornerRadius">10dp</item>
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Weather.EditTextAppearance.Outlined" parent="@style/Widget.AppCompat.EditText">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:background">@drawable/et_background</item>
        <item name="android:textColorHint">@color/black40</item>
        <item name="hintTextAppearance">@style/Weather.TextAppearance.Medium</item>
    </style>

    <style name="Weather.TextAppearance.Medium" parent="@style/TextAppearance.AppCompat">
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

</resources>